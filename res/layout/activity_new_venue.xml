<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewVenue" >

     <Button
        android:id="@+id/button_createVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="@string/create"
        android:onClick="doneButtonPushed"
        />
     
    <EditText
        android:id="@+id/editText_venueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Venue name (required)"
        android:inputType="textPersonName"
        android:maxLines="1"
        >
        	<requestFocus />
    	</EditText>

    <CheckBox 
    	android:id="@+id/newVenue_isFavorite"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_alignLeft="@id/editText_venueName"
    	android:layout_below="@id/editText_venueName"
    	android:layout_marginTop="20dp"
    	android:text="Favorite"
    	/>
    
    <CheckBox 
    	android:id="@+id/newVenue_isActive"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_alignLeft="@id/editText_venueName"
    	android:layout_below="@id/newVenue_isFavorite"
    	android:text="Active"
    	android:visibility="gone"
    	/>

</RelativeLayout>