<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewVenue" >

    <EditText
        android:id="@+id/editText_venueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Venue Name (required)" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_createVenue"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:onClick="createNewVenue" />
    
    <CheckBox
        android:id="@+id/checkBox_scoreKeptFromTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/editText_venueName"
        android:layout_marginTop="32dp"
        android:checked="true"
        android:text="Score from top" />
    
    <CheckBox 
    	android:id="@+id/newVenue_isActive"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_below="@id/checkBox_scoreKeptFromTop"
    	android:layout_alignParentLeft="true"
    	android:layout_marginTop="20dp"
    	android:text="Active"
    	android:visibility="gone" />"

</RelativeLayout>